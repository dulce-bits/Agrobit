<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
    android:layout_margin="8dp">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        android:padding="15dp">
            <ImageView
                    android:id="@+id/orchar_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_corn"/>
            <TextView
                    android:id="@+id/orchar_name"
                    android:layout_toEndOf="@id/orchar_image"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Rancho San Gabriel"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:fontFamily="sans-serif-light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/orchar_desc"
                    android:layout_toEndOf="@id/orchar_image"
                    android:layout_marginLeft="10dp"
                    android:textSize="14dp"
                    android:gravity="bottom"
                    android:textStyle="normal"
                    android:fontFamily="sans-serif-light"
                    android:text="13 ha - Maíz"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp" />

            <TextView
                    android:id="@+id/hora"
                    android:layout_width="match_parent"
                    android:gravity="left"
                    android:layout_height="wrap_content"
                    android:text="Hoy, 07:07h"
                    android:textStyle="normal"
                    android:textSize="16dp"
                    android:fontFamily="sans-serif-light"
                    android:layout_below="@id/orchar_image"
                    android:layout_marginTop="10dp"
            />
            <Button
                    android:id="@+id/btnmas"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_blue_round"
                    android:text="Más"
                    android:textAllCaps="false"
                    android:textStyle="normal"
                    android:textColor="@color/colorWhite"
                    android:layout_width="60dp"
                    android:layout_height="25dp"/>
            <ImageView
                    android:id="@+id/status"
                    android:layout_alignParentEnd="true"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_f3"
                    android:layout_below="@+id/btnmas"
                    android:layout_alignBottom="@id/hora"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>