<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:id="@+id/bottomdesign"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_hideable="true">
    <RelativeLayout

            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/header_part"
            android:layout_width="match_parent"
            android:layout_height="50dp">
        <ImageButton
                android:background="@color/colorWhite"
                android:id="@+id/back_bd"
                android:layout_alignTop="@id/title_profile"
                android:layout_alignBottom="@id/title_profile"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_left_arrow"/>
        <TextView
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@id/back_bd"
                android:text="Información de la huerta"
                android:textColor="@color/textGray"
                android:textSize="17sp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:textStyle="bold"
                android:id="@+id/title_profile"
                android:layout_width="wrap_content"
                android:layout_height="50dp"/>

    </RelativeLayout>
    <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <TextView
                android:layout_marginTop="20dp"
                android:text="Nombre"
                android:textSize="14sp"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/textGray"
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <EditText
                android:inputType="textPersonName"
                android:maxLines="1"
                android:maxLength="30"
                android:nextFocusDown="@id/areaOrchard"
                android:id="@+id/orchardName"
                android:textColor="@color/textGray"
                android:textStyle="normal"
                android:fontFamily="sans-serif-light"
                android:textSize="16sp"
                android:text="Huerta sin nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_marginTop="10dp"
                android:text="Área"
                android:textSize="14sp"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/textGray"
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <EditText
                android:id="@+id/areaOrchard"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:maxLength="30"
                android:nextFocusDown="@id/fname"
                android:textColor="@color/textGray"
                android:textStyle="normal"
                android:fontFamily="sans-serif-light"
                android:textSize="16sp"
                android:text="244"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <Button
                android:layout_gravity="bottom"
                android:id="@+id/btn_solicitar"
                android:text="Solicitar análisis"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_blue_round"/>
    </LinearLayout>


</LinearLayout>