<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.agrobit">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
            android:allowBackup="true"
            android:icon="@drawable/ic_agrobit_rounded"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".account.ProfileActivity"
        android:theme="@style/WhiteCursorTheme">
        </activity>
        <activity android:name=".account.SignupActivity">
        </activity>
        <activity
                android:name=".account.LoginActivity"
                android:theme="@style/AppTheme">
        </activity>
        <activity
                android:name=".activities.MainActivity"
                android:theme="@style/WhiteCursorTheme">
        </activity>
        <activity
                android:name=".splashscreen.SplashActivity"
                android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>